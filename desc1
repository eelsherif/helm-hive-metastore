# Source: hive-metastore/templates/service.yaml
apiVersion: v1
kind: Service
metadata:
  name: hive-metastore
  labels:
    helm.sh/chart: hive-metastore-0.1.1
    app: hive-metastore
    app.kubernetes.io/version: "3.0.0"
    app.kubernetes.io/managed-by: Helm
