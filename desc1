# Source: hive-metastore/templates/deployment.yaml
apiVersion: apps/v1
kind: Deployment
metadata:
  name: hive-metastore
  labels:
    helm.sh/chart: hive-metastore-0.1.1
    app: hive-metastore
    app.kubernetes.io/version: "3.0.0"
    app.kubernetes.io/managed-by: Helm
spec:
  replicas: 1
  selector:
    matchLabels:
      app: hive-metastore
  template:
    metadata:
      labels:
        helm.sh/chart: hive-metastore-0.1.1
        app: hive-metastore
        app.kubernetes.io/version: "3.0.0"
        app.kubernetes.io/managed-by: Helm
        app: hive-metastore
    spec:
      containers:
        - name: hive-metastore
          image: "harbor.dell.com/ai-data/hive-metastore:latest"
          imagePullPolicy: IfNotPresent
#          command: ["/opt/hive-metastore/bin/entrypoint.sh"]
          env:
          - name: HIVE_DB_EXTERNAL
            value: "true"
          - name: HIVE_DB_HOST
            value: "10.139.145.3:9432"
          - name: HIVE_DB_NAME
            value: "icebergcatalog"
          - name: HIVE_DB_PASS
            value: "hg5Mc1NC2pM4"
          - name: HIVE_DB_USER
            value: "icebergcatalogusr"
          - name: HIVE_WAREHOUSE_DIR
            value: "file:///tmp/"
          ports:
            - name: tcp
              containerPort: 9083
              protocol: TCP
          livenessProbe:
            tcpSocket:
              port: 9083
          readinessProbe:
            tcpSocket:
              port: 9083
          resources:
            limits:
              cpu: 2
              memory: 4Gi
            requests:
              cpu: 2
              memory: 4Gi
          volumeMounts:
          - name: hive-conf-templates
            mountPath: /opt/hive-metastore/conf/templates
      volumes:
      - name: hive-conf-templates
        configMap:
          name: hive-metastore-conf-templates
